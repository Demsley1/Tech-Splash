<h2> Create Your Post </h2>
<section>
    <form class="card post add-post">
        <div class="card-header post-header">
            <label for="title-text">Title:</label>
            <input type="text" name="title-text" id="title-text" />

            <label for="post-url">Post URL:</label>
            <input type="url" name="post-url" id="post-url" />
        </div>
        <div class="d-grid">
            <label for="post-content">Content:</label>
           <textarea name="post-content"></textarea> 
        </div>
        <div class="card-footer text-center">
            <input type="submit" class="btn btn-primary"></input>
        </div>
    </form>
</section>
<script src="/scripts/add-post.js"></script>