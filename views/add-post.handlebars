<div class="item-container">
    <h2 class="title"> Create Your Post </h2>
</div>

<section class="post-controller">
    <form class="card post add-post">
        <div class="card-header post-header">
            <div class="col-6">
                <label for="title-text">Title:</label>
                <input class="post-text" type="text" name="title-text" id="title-text" />
            </div>

            <div class="col-6">
                <label for="post-url">Post URL:</label>
                <input class="post-text" type="url" name="post-url" id="post-url" />
            </div>
        </div>
        <div class="d-grid">
            <label for="post-content" class="content-label">Content:</label>
           <textarea name="post-content"></textarea> 
        </div>
        <div class="card-footer text-center">
            <input type="submit" class="btn btn-primary"></input>
        </div>
    </form>
</section>
<script src="/scripts/add-post.js"></script>