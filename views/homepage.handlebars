<div class="item-container">
    <h1 class="title">All Posts</h1>
</div>

<section class="post-controller">
    {{#each posts as |post|}}   
        <article class="card post">
            <div class="card-header post-header">
                <a class="post-link col-9" href="/post/{{id}}">{{title}}</a>

                <span class="date"> posted: {{format_date created_at}}</span>
            </div>
            <div class="info">
                {{content}}
            </div>
        </article>
    {{/each}}
</section>